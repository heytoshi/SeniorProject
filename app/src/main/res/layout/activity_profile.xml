<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03DAC6"
    tools:context=".ProfileActivity"
    android:id="@+id/relativeLayout">

    <Button
        android:id="@+id/enterchat"
        android:layout_width="424dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Go to chat/video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pasteYourLink" />

    <EditText
        android:id="@+id/pasteYourLink"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Paste Your Link"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameForLink" />

    <Button
        android:id="@+id/saveLink"
        android:layout_width="424dp"
        android:layout_height="45dp"
        android:layout_marginBottom="9dp"
        android:text="Save Link"
        app:layout_constraintBottom_toTopOf="@+id/nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterchat" />

    <EditText
        android:id="@+id/nameForLink"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:hint="Name of link (Required for saving)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="173dp"
        android:hint="User Name"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveLink" />

</android.support.constraint.ConstraintLayout>
